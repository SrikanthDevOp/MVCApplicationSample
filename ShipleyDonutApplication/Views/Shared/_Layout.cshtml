<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/layout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="background:red;height:10px"></div>
    <div class="navbar">
        <div style="height: 100px; display: flex; position: relative;">
            <div>
                <span>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img src="~/Content/images/shipley_company_logo.svg" alt="Shipley Logo" style="height:100px" />
                    </a>
                </span>
            </div>
            <div style="position: absolute;bottom: 0;left: 7%;display: inline-flex;" >
                <ul class="nav navbar-nav header-menu-items">
                    <li>@Html.ActionLink("COMPANY", "Index", "Home")</li>
                    <li>@Html.ActionLink("MENU", "Menu", "Home")</li>
                    <li>@Html.ActionLink("FRANCHISE", "Franchise", "Home")</li>
                    <li>@Html.ActionLink("COMMUNITY", "Community", "Home")</li>
                    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                    <li>@Html.ActionLink("SHOP", "Shop", "Home")</li>
                    <li>@Html.ActionLink("STORE LOCATOR", "StoreLocator", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shipley Donuts</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
